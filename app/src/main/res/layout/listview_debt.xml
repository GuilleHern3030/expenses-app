<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debt_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp"
    android:layout_marginTop="2dp"
    android:background="@color/debt_background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/debt_text"
            android:text="Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/debt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="24dp"
            android:textColor="@color/debt_text"
            android:text="Debt amount"
            android:textSize="14sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/debt_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="16dp"
        android:textStyle="italic"
        android:textColor="@color/debt_description"
        android:text="Debt description"
        android:textSize="14sp"/>


</LinearLayout>