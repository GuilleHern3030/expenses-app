<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/semi_transparent"
    tools:context=".views.budget.BudgetCreator">

    <ImageButton
        android:id="@+id/bCancel"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/close" />

    <androidx.cardview.widget.CardView
        android:padding="3dp"
        android:layout_gravity="center"
        android:minHeight="32dp"
        android:layout_marginHorizontal="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_container">

        <androidx.cardview.widget.CardView
            android:padding="3dp"
            android:minHeight="32dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/cardview_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/cardview_title_background"
                    android:padding="2dp"
                    android:text="@string/budget_input_title"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_title_foreground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/budget_input_name" />

                <EditText
                    android:id="@+id/etBudgetName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:ems="10"
                    android:inputType="textCapSentences" />

                <ImageButton
                    android:id="@+id/bAccept"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/check" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</FrameLayout>