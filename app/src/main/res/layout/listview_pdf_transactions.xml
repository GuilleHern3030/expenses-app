<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/transaction_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="1pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16pt"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/transaction_category_container"
            android:layout_width="32pt"
            android:layout_height="32pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8pt">

            <ImageView
                android:id="@+id/transaction_category_image"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_gravity="center">

            </ImageView>
        </FrameLayout>

        <TextView
            android:id="@+id/transaction_category_name"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16pt"
            android:layout_marginEnd="16pt"
            android:text="Category name"
            android:layout_weight="1"
            android:textSize="16pt" />

        <TextView
            android:id="@+id/transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16pt"
            android:layout_gravity="center_vertical"
            android:text="amount"
            android:textSize="16pt"
            app:layout_constraintBottom_toTopOf="@+id/transaction_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/transaction_description"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="24pt"
        android:layout_marginVertical="8pt"
        android:layout_marginEnd="16pt"
        android:textStyle="italic"
        android:text="Transaction description"
        android:textSize="13pt"/>

    </LinearLayout>

</LinearLayout>